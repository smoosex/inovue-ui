{
  "$schema": "https://shadcn-vue.com/schema/registry-item.json",
  "name": "advanced-table",
  "type": "registry:component",
  "title": "Advanced Table",
  "description": "A feature-rich data table component with column management, pagination, sticky headers, and auto-tooltip support.",
  "dependencies": [
    "vue-draggable-plus",
    "@vueuse/core"
  ],
  "registryDependencies": [
    "checkbox",
    "table",
    "tooltip",
    "button",
    "sheet",
    "input",
    "select",
    "pagination"
  ],
  "files": [
    {
      "path": "src/components/advanced-table/AdvancedTable.vue",
      "type": "registry:component",
      "target": "~/components/ui/advanced-table/AdvancedTable.vue"
    },
    {
      "path": "src/components/advanced-table/types.ts",
      "type": "registry:component",
      "target": "~/components/ui/advanced-table/types.ts"
    },
    {
      "path": "src/components/advanced-table/index.ts",
      "type": "registry:component",
      "target": "~/components/ui/advanced-table/index.ts"
    },
    {
      "path": "src/components/advanced-table/components/TablePagination.vue",
      "type": "registry:component",
      "target": "~/components/ui/advanced-table/components/TablePagination.vue"
    },
    {
      "path": "src/components/advanced-table/components/ColumnToggle.vue",
      "type": "registry:component",
      "target": "~/components/ui/advanced-table/components/ColumnToggle.vue"
    }
  ],
  "categories": ["data-display"]
}
